{% extends 'base.html.twig' %}

{% block title %}All posts :{% endblock %}

{% block body %}
    <div>
        <b>
            {% if posts|length > 0 %}
                {% for key, post in posts %}
                    <div>
                        <a href="{{ path('app_micro_post_show', {post: post.id}) }}">
                            {{ post.title }}
                        </a>
                    </div>
                {% endfor %}
            {% else %}
                <div>There's nothing here yet!</div>
            {% endif %}
        </b>
    </div>
{% endblock %}
